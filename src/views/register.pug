block head
    link(rel="stylesheet", href="/register.css")

block content
    h1 Register here
    form(action='/makeaccount' method='POST')
        label(for='first_name') First name:
        input(name='first_name', type='text', required)
        label(for='last_name') Last name:
        input(name='last_name', type='text', required)
        label(for='email') Email:
        input(name='email', type='email', required)
        label(for='password') Password:
        input(name='password', type='password', required)
        label(for='contact_number') Contact number:
        input(name='contact_number', type='text')
        label(for='gender') Gender:
        select(name='gender', required)
            option(value='', disabled, selected) Choose Gender
            option(value='male') Male
            option(value='female') Female
            option(value='other') Other
        label(for='age') Age:
        input(name='age', type='number', min='0')
        label(for='date_of_birth') Date of Birth:
        input(name='date_of_birth', type='date', required)
        select(name="type_of_subscription", required)
            option(value='', disabled, selected) Choose Subscription
            option(value='student') Student(Free)
            option(value='professional') Professional (Â£19.99)
        input(type='submit' value='Submit')
