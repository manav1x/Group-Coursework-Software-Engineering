extends layout.pug 

block head
    link(rel="stylesheet", herf="/cities.css")

block content
    h2 Cities 
    table
        thead
            th.text-center Code
            th City 
            th.number Population 
        tbody 
            each row in rows 
                tr 
                    td.fit  #{row.CountryCode}
                    td  #{row.Name}
                    - const population = new Intl.NumberFormat().format(row.Population)
                    td.fit.number #{population}